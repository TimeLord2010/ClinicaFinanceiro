<UserControl x:Class="Financeiro.UserControls.MoreControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Financeiro.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600" Background="White">
    <Grid x:Name="MyGrid">
        <StackPanel Margin="5">
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Importar a partir de banco de dados externo...</TextBlock>
                <Button x:Name="EspecificarB" Click="EspecificarB_Click" Style="{StaticResource GreenButton}">Especificar</Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock VerticalAlignment="Center">Exportar para nuvem...</TextBlock>
                <Button Style="{StaticResource GreenButton}" Name="ComecarExportarB" Click="ComecarExportarB_Click">Começar...</Button>
            </StackPanel>
        </StackPanel>
        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Style="{StaticResource GreenButton}" Name="AjudaB" Click="AjudaB_Click">Ajuda</Button>
        </StackPanel>
    </Grid>
</UserControl>
