<UserControl x:Class="Financeiro.UserControls.ChooseEntity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Financeiro.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="80"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="EntityNameTB" IsReadOnly="True"></TextBox>
        <Button Grid.Column="1" Style="{StaticResource GreenButton}" Name="ProcurarB" Click="ProcurarB_Click">Procurar</Button>
    </Grid>
</UserControl>
